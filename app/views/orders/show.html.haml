%main.container.general-main-wrap
  %h1.general-title-margin Order R25314582
  .row.mb-20
    - @order.addresses.each do |current_address|
      .col-sm-3
        %h3.general-subtitle= current_address.address_type.capitalize
        %p.general-address
          = current_address.first_name
          = current_address.last_name
          %br
          = current_address.address
          %br
          = current_address.zipcode
          %br
          = current_address.country
          %br
          = current_address.phone
    .col-sm-3
      %h3.general-subtitle Shipments
      %p.general-address
        = @order.delivery.name
        %br
        = @order.delivery.time
        %br
        = number_to_currency(@order.delivery.price, unit: '€')
    .col-sm-3
      %h3.general-subtitle Payment Information
      %p.general-address
        ** ** ** #{@order.credit_card.number.last(4)}
        %br
        = @order.credit_card.month_year
  .visible-xs
    - @order.line_items.each do |line_item|
      .general-cart-item.divider-lg
        .general-img-wrap-table
          %img.cart-img-shadow
            = image_tag url_for(line_item.book.images.first)
        %p.title
          = line_item.book.title
        %P.in-grey-600.fw-300
          = line_item.book.description.split('.').first
        %table.table
          %tr
            %td
              %span.in-grey-600 Price
            %td
              %span.font-16.in-gold-500
                = number_to_currency(line_item.book.price, unit: '€')
          %tr
            %td.vertical-middle
              %span.in-grey-600 Quantity
            %td
              %span
                = line_item.quantity
          %tr
            %td
              %span.in-grey-600 SubTotal
            %td
              %span.font-16.in-gold-500
                = number_to_currency(line_item.total_price, unit: '€')
  .hidden-xs.divider-lg.pt-20
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600 Book
          %th.col-method
          %th
            %span.in-grey-600 Price
          %th
            %span.in-grey-600 Quantity
          %th
            %span.in-grey-600 Total
      %tbody
        - @order.line_items.each do |line_item|
          %tr
            %td
              .general-img-wrap-table
                %img.cart-img-shadow.pull-left
                  = image_tag url_for(line_item.book.images.first)
            %td
              %p.title
                = line_item.book.title
              %p.in-grey-600.fw-300
                = line_item.book.description.split('.').first
            %td
              %span.font-16.in-gold-500
                = number_to_currency(line_item.book.price, unit: '€')
            %td
              %span.ml-30
                = line_item.quantity
            %td
              %span.font-16.in-gold-500
                = number_to_currency(line_item.total_price, unit: '€')
  .text-center.general-text-right
    %p.in-gold-500.font-18 Order Summary
    %table.general-summary-table.general-summary-table-right.general-text-right
      %tr
        %td
          %p.font-16 Subtotal:
        %td
          %p.font-16
            = number_to_currency(@order.sub_total, unit: '€')
      %tr
        %td
          %p.font-16 Coupon:
        %td
          %p.font-16
            = number_to_currency(@order.discount, unit: '€')
      %tr
        %td
          %p.font-16 Shipping:
        %td
          %p.font-16
            = number_to_currency(@order.delivery.price, unit: '€')
      %tr
        %td
          %strong.font-18 Order Total:
        %td
          %strong.font-18
            = number_to_currency(@order.order_total, unit: '€')
