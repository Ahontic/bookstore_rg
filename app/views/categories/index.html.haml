%main.container
  %h1.general-title-margin
    = t :catalog
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false", id: 'filters-md'}
          = I18n.t('book_sort.newest_first')
          %i.fa.fa-angle-down.dropdown-icon.pull-right
        %ul.dropdown-menu
          - Book::AVAILABLE_FILTERS.each_value do |filter|
            %li
              = link_to I18n.t("book_sort.#{filter.to_s}"), categories_path(status: filter)
    %ul.list-inline.pt-10.mb-25.mr-240
      %li.mr-35
        %a.filter-link{href: categories_path}
          = t :all
          %span.badge.general-badge
            = Book.count
      - categories.each do |category|
        %li.mr-35
          %a.filter-link{href: category_path(category) }
            = category.title
            %span.badge.general-badge
              = category.books.count
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10 Filter by category
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
        Newest first
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        - Book::AVAILABLE_FILTERS.each_value do |filter|
          %li
            = link_to I18n.t("book_sort.#{filter.to_s}"), categories_path(status: filter)
  .mb-120
    .row
    - books.each do |book|
      .col-xs-6.col-sm-3
        .general-thumb-wrap
          .thumbnail.general-thumbnail
            %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .thumb-hover
              .general-thumb-link-wrap
                %a.thumb-hover-link{href: category_book_path(book.category_id, book)}
                  %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                = link_to line_items_path(book_id: book.id), method: :post, class: 'thumb-hover-link shopping-cart-buy-btn' do
                  %i.fa.fa-shopping-cart.thumb-icon
        .general-thumb-info
          %p.title
            = book.title
          %p.font-16.in-gold-500
            = book.price
          %span.divider-sm
          %p.lead.small
            = book.decorate.authors_names
  = pagy_bootstrap_nav(@pagy).html_safe
