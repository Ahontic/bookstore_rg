%main.container
  %h3
    = t :latest_books
  #slider.carousel.slide{'data-ride': "carousel"}
    %ol.carousel-indicators
      %li.active{'data-target': "#slider", 'data-slide-to': "0"}
      %li{'data-target': "#slider", 'data-slide-to': "1"}
      %li{'data-target': "#slider", 'data-slide-to': "2"}
    .carousel-inner{role: "listbox"}
      - @latest.each_with_index do |item, index|
        .item{class: index.zero? ? 'active' : ''}
          .row
            .col-sm-5
              .general-img-wrap
                %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
            .col-sm-7
              .mb-60
                %h1= item.title
                %p.lead= item.description
                %p.lead.small= item.authors_names
                .general-align
                  = link_to line_items_path(book_id: item.id), method: :post, class: 'btn-default' do
                    %button.btn.btn-default Buy Now
  %a.left.carousel-control{href: "#slider", role: "button", 'data-slide': "prev"}
    %span.icon-prev{'aria-hidden': "true"}
    %span.sr-only
      = t :previous
  %a.right.carousel-control{href: "#slider", role: "button", 'data-slide': "next"}
    %span.icon-next{'aria-hidden': "true"}
    %span.sr-only
      = t :next
.container
  .jumbotron.text-center.mb-0
    %h2.h1
      = t :welcome
    .mb-res-50
      %p
        = t :invitation_to_shop
    %button.btn.btn-default
      = link_to t(:get_started), categories_path, class: 'btn-default'
  .mb-35
    %h3
      = t :best_sellers
    .row
      - @best_sellers.each do |book|
        .col-sm-6.col-md-3
          .general-thumb-wrap
            .thumbnail.general-thumbnail
              %img.img-shadow.general-thumbnail-img{src: "http://jonathantweedy.com/resources/thumbs/SmashingBook5ResponsiveWebDesign.jpg", alt: "design-book"}
              .thumb-hover
                .general-thumb-link-wrap
                  %a.thumb-hover-link{href: category_book_path(book.category_id, book)}
                    %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
                  = link_to line_items_path(book_id: book.id), method: :post, class: 'thumb-hover-link shopping-cart-buy-btn' do
                    %i.fa.fa-shopping-cart.thumb-icon
          .mb-35
            .clearfix
              %p.pull-right.font-16.in-gold-500
                = book.price
              %p.title.mr-55
                = book.title
            %span.divider-sm
            %p.lead.small
              = book.decorate.authors_names