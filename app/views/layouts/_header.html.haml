%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand
        = t :title
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t(:home), root_path
          %li.dropdown
            %a.dropdown-toggle{href: categories_path, 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t :shop
            %ul.dropdown-menu
              %li
                %a{href: "#"}
                  = t :mobile_development
              %li
                %a{href: "#"}
                  = t :photo
              %li
                %a{href: "#"}
                  = t :web_design
              %li.divider{role: "separator"}
              %li
                %a
                  = link_to I18n.t(:log_out), destroy_customer_session_path
          %li.dropdown
            %a.dropdown-toggle{href: new_customer_session_path, 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t :my_account
              %ul.dropdown-menu
            - if customer_signed_in?
              Hello, #{current_customer.email}
              = link_to 'Sign Out', destroy_customer_session_path, method: :delete
            - else
              = link_to 'Sign In', new_customer_session_path
              = link_to "Sign up", new_customer_registration_path
