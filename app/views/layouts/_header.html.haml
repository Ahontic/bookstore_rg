%header.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.pull-left{type: "button", 'data-toggle': "collapse", 'data-target': "#navbar"}
        %span.sr-only
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand
        = t :title
      %a.shop-link.pull-right.visible-xs{href: "#"}
        %span.shop-icon
          %span.shop-quantity 3
    %a.shop-link.pull-right.hidden-xs{href: "#"}
      %span.shop-icon
        %span.shop-quantity 3
    #navbar.navbar-collapse.collapse.pl-30{'aria-expanded': "false"}
      .visible-xs
        %button.close{type: "button", 'aria-label': "Close"}
          %span{'aria-hidden': "true"} &times;
        %ul.nav.navbar-nav
          %li
            = link_to t(:home), root_path, class: 'btn'
          %li
            = link_to t(:shop), categories_path, class: 'btn'
            %ul#menu.collapse.list-unstyled.pl-30.mb-10{'aria-expanded': "false"}
              %li
                %a.collapse-link{href: "#"}
                  = t :mobile_development
              %li
                %a.collapse-link{href: "#"}
                  = t :photo
              %li
                %a.collapse-link{href: "#"}
                  = t :web_design
          %li
            %a{href: "#"}
              = t :my_account
      .hidden-xs
        %ul.nav.navbar-nav
          %li
            = link_to t(:home), root_path
          %li.dropdown
            %a.dropdown-toggle{href: categories_path, 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
              = t :shop
            %ul.dropdown-menu
              %li
                %a{href: "#"}
                  = t :mobile_development
              %li
                %a{href: "#"}
                  = t :photo
              %li
                %a{href: "#"}
                  = t :web_design
              %li.divider{role: "separator"}
              %li
                %a{href: "#"}
                  = t :log_out
          %li
            %a{href: "#"}
              = t :my_account
