%main.container
  = link_to 'Back to results', category_path(@book.category_id)
  .row
    .col-sm-6
      .product-gallery
        .mb-20
          %img.img-responsive{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
        .images.clearfix
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
          %a.img-link{href: "#"}
            %img{src: "https://www.bramstein.com/static/smashing-book-5-photo-stack.9d5d114e3e.jpg"}
    .col-sm-6
      %h1.mt-res-0
        = book.title
      %p.lead.small
        = book.authors_names
    .col-sm-6
      %h1.mt-res-0
        %p.lead.small
          = I18n.t('book.piece', count: book.quantity)
          %button.btn.btn-sm.btn-success#decrease-quantity -
          %button.btn.btn-sm.btn-success#increase-quantity +
          = button_to "Add #{book.title} to cart", line_items_path(:book_id => book.id)
      .row
        .col-xs-12.col-md-4
          %p.h1.in-gold-500.mt-10#book-cost
            = number_to_currency( @book.price, unit: 'â‚¬')
        .col-xs-5.col-md-3
          .input-group.general-position
            %input.form-control#quantity-input{ value: 1 }
              %input.form-control.hidden#book-price{ value: "#{@book.price}" }
        .col-xs-7.col-md-5
          %button.btn.btn-default.pull-right.general-position
            = button_to "Add to Cart", line_items_path(book_id: book.id)
      .general-info-wrap.divider-lg
        %p
          = t 'book.description'
        %p.lead.small.line-height-2
          = truncate(book.description, length: 25)
          %a.in-gold-500.ml-10
            = link_to 'Read more', '', class: "read-more-#{book.id}"

      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t 'book.year_of_publication'
          %p.lead.small.pull-right
            =  book.issue_date
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t 'book.dimensions'
          %p.lead.small.pull-right
            = book.dimensions
      .general-info-wrap.divider-lg
        .clearfix
          %p.pull-left
            = t 'book.materials'
          %p.lead.small.pull-right
            = book.material.name
  .mb-80
  - if customer_signed_in?
    %h3
      = t 'review.write_a_review'
    %p.general-info-text
      = t 'review.score'
    .mb-15
      = render 'reviews/form'
    %h3.in-gold-500.mb-25 Reviews (#{@book.reviews.approved.count})
    = render @book.reviews.approved
